                                <Label Content="目标UUID：erererererereer" Margin="10,29,538,10"/>
                                <Label Content="远程端口：25555" HorizontalAlignment="Left" Margin="177,4,0,0" VerticalAlignment="Top"/>
                                <Label Content="本地端口：25566" Margin="177,32,371,7"/>
                                <CheckBox Content="启用" HorizontalAlignment="Left" Margin="630,0,0,0" VerticalAlignment="Center" Checked="CheckBox_Checked"/>
