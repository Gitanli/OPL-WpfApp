            </TabItem>
            <TabItem Header="日志" RenderTransformOrigin="1.927,0.59" Margin="29,-2,-61,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <Label Content="窗口2" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" Grid.Column="3" Height="26" Width="42"/>
                </Grid>
            </TabItem>
            <TabItem Header="文档" RenderTransformOrigin="1.927,0.59" Margin="61,-2,-93,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <WebBrowser x:Name="wpfWebBrowser" />

                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
